        System.out.println("Enter the array values: ");
        for (int i = 0; i < numberOfColumns; i++) {
            for (int j = 0; j < numberOfRows; j++) {
                board[i][j] = input.nextInt();
            }
        }

        System.out.println(isConsecutiveFour(board));
    }

