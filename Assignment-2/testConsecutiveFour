        return false;
     }

     public static boolean isConsecutiveFour(int[] values) {
        for (int i = 0; i < values.length - 3; i++) {
          boolean isEqual = true;
          for (int j = i; j < i + 3; j++) {
            if (values[j] != values[j + 1]) {
              isEqual = false;
              break;
            }
          }

          if (isEqual) return true;
        }

        return false;
    }
}
